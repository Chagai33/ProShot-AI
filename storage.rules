rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User-specific storage paths
    match /users/{userId}/{allPaths=**} {
      // Read: authenticated users can read their own files
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Write: authenticated users can upload to their own folder with validation
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB max file size
        && request.resource.contentType.matches('image/.*'); // Only image files
        
      // Delete: users can delete their own files
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
